{
    "swagger": "2.0",
    "info": {
        "title": "Blox daemon-scheduler",
        "description": "APIs supported by the Blox daemon-scheduler",
        "version": "v1",
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "x-copyright": "Copyright 2016, Amazon.com Inc. or Affiliates.  This documentation was created using Swagger.io, located at http://editor.swagger.io/"
    },
    "basePath": "/v1",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "parameters": {
        "name": {
            "in": "path",
            "name": "name",
            "type": "string",
            "description": "Name of environment",
            "required": true
        },
        "nextToken": {
            "in": "query",
            "name": "nextToken",
            "type": "string",
            "description": "Pagination token"
        },
        "id": {
            "in": "path",
            "name": "id",
            "type": "string",
            "description": "ID of deployment",
            "required": true
        },
        "deploymentToken": {
            "in": "query",
            "name": "deploymentToken",
            "type": "string",
            "description": "Deployment token",
            "required": true
        },
        "cluster": {
            "in": "query",
            "name": "cluster",
            "type": "string",
            "description": "Cluster ARN"
        }
    },
    "paths": {
        "/ping": {
            "get": {
                "description": "Ping server for health status",
                "operationId": "ping",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/environments": {
            "post": {
                "description": "Create a new environment",
                "operationId": "createEnvironment",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/CreateEnvironmentRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Environment"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Resource not found, e.g. Cluster missing or TaskDefinition missing",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "get": {
                "description": "Gets all the environments after applying filters, if any",
                "operationId": "listEnvironments",
                "parameters": [
                    {
                        "$ref": "#/parameters/nextToken"
                    },
                    {
                        "$ref": "#/parameters/cluster"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Environments"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/environments/{name}": {
            "parameters": [
                {
                    "$ref": "#/parameters/name"
                }
            ],
            "get": {
                "description": "Get an environment by name",
                "operationId": "getEnvironment",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Environment"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Resource not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "delete": {
                "description": "Delete an environment by name",
                "operationId": "deleteEnvironment",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/environments/{name}/deployments": {
            "parameters": [
                {
                    "$ref": "#/parameters/name"
                },
                {
                    "$ref": "#/parameters/deploymentToken"
                }
            ],
            "post": {
                "description": "Create a deployment under provided environment",
                "operationId": "createDeployment",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Deployment"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Resource not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "get": {
                "description": "Get deployments under provided environment",
                "operationId": "listDeployments",
                "parameters": [
                    {
                        "$ref": "#/parameters/nextToken"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Deployments"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/environments/{name}/deployments/{id}": {
            "parameters": [
                {
                    "$ref": "#/parameters/name"
                },
                {
                    "$ref": "#/parameters/id"
                }
            ],
            "get": {
                "description": "Get deployment",
                "operationId": "getDeployment",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Deployment"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Resource not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "CreateEnvironmentRequest": {
            "description": "Request object to CreateEnvironment api",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9-_]{1,30}$"
                },
                "instanceGroup": {
                    "$ref": "#/definitions/InstanceGroup"
                },
                "taskDefinition": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "instanceGroup",
                "taskDefinition"
            ]
        },
        "HealthStatus": {
            "type": "string",
            "default": "healthy",
            "enum": [
                "healthy",
                "unhealthy"
            ]
        },
        "InstanceGroup": {
            "description": "Structure to group instances together",
            "type": "object",
            "properties": {
                "cluster": {
                    "description": "Cluster of instances, e.g. ECS Cluster",
                    "type": "string"
                }
            }
        },
        "Environment": {
            "description": "A representation of environment managed by scheduler via deployments",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Name of the environment",
                    "type": "string"
                },
                "deploymentToken": {
                  "description": "The token used to verify that the deployment is being kicked off on the correct version of the environment",
                  "type": "string"
                },
                "instanceGroup": {
                    "$ref": "#/definitions/InstanceGroup"
                },
                "taskDefinition": {
                    "description": "TaskDefinition used to start tasks under this environment",
                    "type": "string"
                },
                "health": {
                    "$ref": "#/definitions/HealthStatus"
                }
            },
            "required": [
                "name",
                "instanceGroup",
                "health"
            ]
        },
        "Environments": {
            "description": "Paginated list of environments",
            "type": "object",
            "properties": {
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Environment"
                    }
                },
                "nextToken": {
                    "type": "string"
                }
            },
            "required": [
                "items"
            ]
        },
        "Deployment": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "default": "pending",
                    "enum": [
                        "pending",
                        "running",
                        "completed"
                    ]
                },
                "taskDefinition": {
                    "type": "string"
                },
                "environmentName": {
                    "type": "string"
                },
                "failedInstances": {
                    "type": "array",
                    "description": "List of ECS container-instance ARNs where deployment failed",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "id",
                "status",
                "taskDefinition",
                "environmentName"
            ]
        },
        "Deployments": {
            "description": "Paginated list of deployments",
            "type" : "object",
            "properties": {
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Deployment"
                    }
                },
                "nextToken": {
                    "type": "string"
                }
            },
            "required": [
                "items"
            ]
        }
    }
}
